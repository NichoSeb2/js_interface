{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"indent": [
			"error",
			"tab", {
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"keyword-spacing": [
			"error", {
				"before": true,
				"after": true
			}
		],
		"brace-style": [
			"error"
		],
		"space-before-blocks": [
			"error",
			"always"
		],
		"no-multiple-empty-lines": [
			"error", {
				"max": 1,
				"maxEOF": 0
			}
		]
	}
}
